    function getFbTypes($db){
         $getFbTypesSql = "SELECT `fbtypeId` FROM `fbtype` ORDER BY `pos`";
         $result = $db->query($getFbTypesSql);	   
         $typesHtml = "";
         while ($row = $result->fetch_object()){
