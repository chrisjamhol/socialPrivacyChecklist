<?php

class Screenshot extends DbObjects{
    protected $properties, $coloums, $table;


    public function __construct($id = NULL){
        $this->properties = array("id"=>"","name"=>"","description"=>"");
        $this->coloums = array("screenshotId","name","description");
        $this->table = "screenshots";
        
        if($id != NULL){
            $dbData = $this->load($id)->fetch_object();
             //loaded with id (existing)
            $this->properties['name'] = $dbData->name;
            $this->properties['id'] = $dbData->screenshotId;
            $this->properties['description'] = $dbData->description;
        }else{
            
        }
    }
    
    public function returnThrumnailsAsHtmlBack(){
        return $screenshotHtml = '<img id="screenshot'.$this->properties['id'].'" src="../images/screenshots/thumbnails/'.$this->properties['name'].'" alt="'.$this->properties['name'].'" title="'.$this->properties['description'].'" />';
    }
    
    public function setValue($key, $value){
         $this->properties[$key] = $value;
    }
    
}

