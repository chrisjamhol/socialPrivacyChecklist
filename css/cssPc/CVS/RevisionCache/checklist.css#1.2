#checklistContainer{
    height: 624px;
    margin-left: 110px;
    margin-right: 15px;
    overflow-x: hidden;
    overflow-y: auto;
}

#checklistContainer .controls{
    clear: right;
    float: right;   
}

    #checklistContainer .controls .checkButton{
        margin-right: 15px;
        background-color: #00BC00;
        border: none;
        padding: 10px 7px 10px 7px;
        border-radius: 5px;
        font-weight: bold;
        color: white;
        margin-top: 15px;
    }

#checklistContainer .checklistPoint{    
    margin: 10px;  
    height: 307px;
}

#checklistContainer .checklistPointPreview{
    border: 1px solid black;
    border-top: none;
    height: 270px;    
}

    #checklistContainer .heading{
        padding: 10px;
        widht: 100%;
        border: 1px solid black;
        background-color: #F9F9F9;
    }
    
    #checklistContainer .heading:hover{
        background-color: #bcbcbc;
        cursor: pointer;
    }
    
        #checklistContainer .heading .checkicon{
            display: none;
            float: right;
            padding: 0px;
        }
    
    #checklistContainer .textContainer{
        padding: 10px;
        max-width: 620px;
        max-height: 240px;
        overflow: auto;
        overflow-x: hidden;
    }
    
    #checklistContainer .screenshotContainer{
        float: right;
        display: table-cell;
        vertical-align: central;
        padding-left: 10px;
        padding-right: 10px;
        margin-top: 10px;
        text-align: center;
    }
    
        #checklistContainer img{
            max-height: 90px;
            max-width: 140px;
        }
        
        #checklistContainer .screenshotsGeneral{
            padding: 5px;
            height: 90px;
            width: 140px;
        }
        
            #checklistContainer .screenshotsGeneral{
                float: right;
            }
        
        #checklistContainer .screenshot3{
            clear: right;
        } 

#checklistOptions{
    height: 17px;
    background-color: white;
    padding-bottom: 5px;
    margin-right: 40px;
}
        
#printChecklistButton, #mailChecklistButton{
    cursor: pointer;
    width: 13px;
    height: 15px;
    float: right;
    background-image: url('images/sprites/icons.png');
    overflow: hidden;
}
#printChecklistButton{background-position: -161px -100px}
#mailChecklistButton{background-position: -80px -100px; padding-right: 3px;}      

        
#screenshotZoom{
    display: none;
    position: absolute;
    box-shadow: 0 0px 10px black; 
    max-width: 510px;
    max-height: 510px;
    overflow: hidden;
    background-color: white;
    z-index: 99999;
}
   
    .hoverZoom{
        margin: 5px;
        max-height: 500px;
        max-width: 500px;
    }
    
 /*     dialogs                */
 
 #printDialog{
     display: none;
 }
 
 #mailDialog{
     display: none;
 }
    
    #mailDialog form label{
        font-weight: bold;
    }
    
    #mailDialog form input{
        margin-top: 4px;
    }
    
    #sendMailButton span,#cancelSendMailButton span{
        font-size: .8em;
    }
    
    .mailDialogErrorIndicator{
        display: none;
        color: red;
    }
    
    #mailDialogError{
        color: red;
        text-align: center;
        margin-bottom: 8px;
    }
    
    #mailAgreements p{
        margin-bottom: 8px;
    }