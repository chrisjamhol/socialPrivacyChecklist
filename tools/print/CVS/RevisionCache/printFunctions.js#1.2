var elements = document.getElementsByClassName("checklistPoint");
var length = elements.length;
for(var i=0; i < length; i++){
    elements[i].setAttribute("style","transform: none");
    var screenshots = elements[i].getElementsByClassName('screenshotThumbnail');
    if(screenshots.length == 0){
        elements[i].getElementsByClassName('screenshotContainer')[0].style.display="none";        
    }
}

