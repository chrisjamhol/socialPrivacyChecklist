#checklistContainer{
    height: 624px;
    margin-left: 110px;
    margin-right: 15px;
    overflow-x: hidden;
    overflow-y: auto;
}

#checklistContainer .controls{
    clear: right;
    float: right;   
}

    #checklistContainer .controls .checkButton{
        margin-right: 15px;
        background-color: #00BC00;
        border: none;
        padding: 10px 7px 10px 7px;
        border-radius: 5px;
        font-weight: bold;
        color: white;
        margin-top: 15px;
    }

#checklistContainer .checklistPoint{    
    margin: 10px;  
    height: 307px;
}

#checklistContainer .checklistPointPreview{
    border: 1px solid black;
    border-top: none;
    height: 270px;    
}

    #checklistContainer .heading{
        padding: 10px;
        widht: 100%;
        border: 1px solid black;
        background-color: #F9F9F9;
    }
    
    #checklistContainer .heading:hover{
        background-color: #bcbcbc;
        cursor: pointer;
    }
    
        #checklistContainer .heading .checkicon{
            display: none;
            float: right;
            padding: 0px;
        }
    
    #checklistContainer .textContainer{
        padding: 10px;
        max-width: 620px;
    }
    
    #checklistContainer .screenshotContainer{
        float: right;
        display: table-cell;
        vertical-align: central;
        padding-left: 10px;
        padding-right: 10px;
        margin-top: 10px;
        text-align: center;
    }
    
        #checklistContainer img{
            max-height: 90px;
            max-width: 140px;
        }
        
        #checklistContainer .screenshotsGeneral{
            padding: 5px;
            height: 90px;
            width: 140px;
        }
        
