(function($){
    /**
     * takes an image and position it in the parent div like croped<br>
     * the margin sets the right position<br>
     * <div><img ... /></div>
     * 
     * @param type width
     * @param type height
     * @param type margin     * 
     * 
     */
    $.fn.crop = function(w,h,m){
        return this.each(function(){
           var img = $(this); 
           img.parent().css({
               "height": h,
               "width": w,
               "display": "block",
               "overflow": "hidden"
           }).end().css("margin-top",m);
        });
    }
})(jQuery);